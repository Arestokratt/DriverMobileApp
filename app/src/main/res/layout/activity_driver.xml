<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Кабинет водителя"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Одна кнопка для управления сменой -->
    <Button
        android:id="@+id/btnShiftControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Начать смену"
        android:layout_marginBottom="16dp" />

    <!-- Входящие заявки -->
    <Button
        android:id="@+id/btnIncomingOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Входящие"
        android:layout_marginBottom="16dp"
        android:enabled="false"
        android:alpha="0.5" />

    <!-- Мои заявки -->
    <Button
        android:id="@+id/btnMyOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Мои заявки"
        android:layout_marginBottom="16dp"
        android:enabled="false"
        android:alpha="0.5" />

</LinearLayout>