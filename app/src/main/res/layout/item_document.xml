<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#f8f9fa"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/ivDocumentIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_agenda"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvDocumentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ТТН"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#2196F3"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvDocumentName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="waybill.pdf"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDocumentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Товарно-транспортная накладная"
            android:textColor="#666"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDocumentTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01.01.2023 10:30"
                android:textColor="#999"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvFileSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="245 КБ"
                android:textColor="#666"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>