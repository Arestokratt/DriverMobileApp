<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок и кнопка назад -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Назад"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/tvStageTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Этап №7. Терминал сдачи"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

        <!-- Информация о терминале -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Информация о терминале:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Адрес терминала сдачи порожнего контейнера">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTerminalAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:focusable="false"
                android:clickable="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Информация о контейнере -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Информация о контейнере:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:hint="Тип контейнера">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etContainerType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:focusable="false"
                    android:clickable="false" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:hint="Количество контейнеров">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etContainerCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:focusable="false"
                    android:clickable="false" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Временные метки -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Временные метки:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Время прибытия на терминал сдачи">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTerminalArrivalTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="datetime"
                android:focusable="false"
                android:clickable="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Время выезда с терминала сдачи">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTerminalDepartureTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="datetime"
                android:focusable="false"
                android:clickable="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Кнопки действий -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Действия:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Кнопка Приехал -->
        <Button
            android:id="@+id/btnArrived"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Приехал"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white" />

        <!-- Кнопка Уехал -->
        <Button
            android:id="@+id/btnDeparted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Уехал"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white" />

        <!-- Кнопка Документы -->
        <Button
            android:id="@+id/btnDocuments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Документы"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#9C27B0"
            android:textColor="@android:color/white" />

        <!-- Счетчик документов -->
        <TextView
            android:id="@+id/tvDocumentsCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Документы: 0"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="12dp"
            android:background="#E3F2FD"
            android:layout_marginBottom="16dp" />

        <!-- Статус этапа -->
        <TextView
            android:id="@+id/tvStageStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Статус: ⏳ В процессе"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="#FFF3E0" />

        <!-- Завершение заявки -->
        <TextView
            android:id="@+id/tvCompletionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ℹ️ После завершения этого этапа заявка будет считаться выполненной"
            android:textSize="12sp"
            android:textColor="#666"
            android:gravity="center"
            android:padding="8dp"
            android:background="#F0F8FF"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>