<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- Заголовок и кнопка назад -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Назад"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Этап №6. Выдача груза"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <!-- Описание -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выдача груза грузополучателю."
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:background="#f0f8ff" />

        <!-- Информация о грузополучателе -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Информация о грузополучателе"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvConsigneeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Загрузка..."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="#f5f5f5"
            android:lineSpacingExtra="4dp" />

        <!-- Временные отметки -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Временные отметки"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Время прибытия:"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvArrivedTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Не прибыл"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Время выезда:"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDepartedTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Не выехал"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Статус выдачи груза -->
        <CheckBox
            android:id="@+id/cbCargoIssued"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Груз выдан получателю"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:enabled="false" />

        <!-- Статус выполнения -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Статус:"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Не выполнено"
                android:textSize="14sp"
                android:textColor="#FF0000" />

        </LinearLayout>

        <!-- Действия логиста -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Действия логиста"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnPhotos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Фото"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/design_default_color_primary"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnDocuments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Документы"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/design_default_color_primary"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Кнопка выполнения -->
        <Button
            android:id="@+id/btnComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выполнена"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>